@model List<CrachaViewModel>
@{
    ViewData["Title"] = "Crachas";
}
<link rel="stylesheet" href="~/css/professores.css" />
<script src="js/pages/Cracha/Index.js"></script>

<div class="professor-novo">
    <h3>Crachás</h3>
    <a role="button" class="btn btn-success" asp-controller="Cracha" asp-action="Cadastrando">+ Associar novo Crachá</a>
</div>

<div class="listagem">
    @foreach (var item in Model)
    {
        <div class="card-professor">
            <div class="detalhes-container">
                <div class="professor-detalhe">
                    <p>
                        @(item.Aluno.Nome + " - " + item.Aluno.RA)
                    </p>
                    <span>
                        @item.HexaDec
                    </span>
                </div>
            </div>
            <form>
                <div class="icones-acao">
                    <!--
                            <a role="button" class="btn-icon" asp-controller="Cracha" asp-action="Editar" asp-route-id="@item.Id">
                                <i class='bx bx-edit-alt'></i>
                            </a>
                            <button class="btn-icon">
                                <i class='bx bx-trash'></i>
                            </button>
                    -->
                    <button class="btn-icon" asp-controller="Cracha" asp-action="Editar" asp-route-id="@item.Id">
                        <i class='bx bx-edit'></i>
                    </button>

                    <button class="btn-icon" asp-controller="Cracha" asp-action="Deletar" asp-route-id="@item.Id">
                        <i class='bx bx-trash'></i>
                    </button>

                </div>
            </form>
        </div>
    }
</div>