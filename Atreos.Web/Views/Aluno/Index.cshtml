@model List<AlunoViewModel>
@{
    ViewData["Title"] = "Alunos";
}
<link rel="stylesheet" href="~/css/alunos.css" />
<script src="js/pages/Alunos/Index.js"></script>

<div class="aluno-novo">
    <h3>Alunos</h3>
    <a role="button" class="btn btn-success" asp-controller="Aluno" asp-action="Cadastro">+ Adicionar novo Aluno</a>
</div>

<div class="listagem">
    @foreach (var item in Model)
    {


        <div class="card-aluno">
            <div class="detalhes-container">
                <div class="foto-aluno">
                    <img src="~/Images/fotomodelo.svg" />
                </div>
                <div class="aluno-detalhe">
                    <p>
                        @item.Nome
                    </p>
                    <span>
                        @item.RA
                    </span>
                </div>
            </div>
            <form>
                <div class="icones-acao">
                    <!--
                    <a role="button" class="btn-icon" asp-controller="Aluno" asp-action="Editar" asp-route-id="@item.Id">
                            <i class='bx bx-edit'></i>
                    </a>
                    <a role="button" class="btn-icon" asp-controller="Aluno" asp-action="Deletar" asp-route-id="@item.Id">
                        <i class='bx bx-trash'></i>
                    </a>
                    -->

                    <button class="btn-icon" asp-controller="Aluno" asp-action="Editar" asp-route-id="@item.Id">
                        <i class='bx bx-edit'></i>
                    </button>

                    <button class="btn-icon" asp-controller="Aluno" asp-action="Deletar" asp-route-id="@item.Id">
                        <i class='bx bx-trash'></i>
                    </button>


                </div>
            </form>
        </div>
    }
</div>