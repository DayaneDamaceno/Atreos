@{
    ViewData["Title"] = "Cadastrar Novo Aluno";
}
<link rel="stylesheet" href="~/css/cadastroAlunos.css" />


<h3>Insira um novo aluno</h3>
<p>Preencha os campos abaixo</p>
<form method="post" action="Cadastrar">
    <div class="w-100 d-flex flex-column gap-2 my-2">
        <div class="aluno-foto">
            <p>Foto do Aluno</p>
            <img src="~/Images/foto-holder.svg" />
        </div>

        <div class="w-50">
            <label>Nome Completo</label>
            <input type="text" class="form-control" name="Nome">
        </div>
        <div class="w-50">
            <label>RA</label>
            <input type="text" class="form-control" name="RA">
        </div>

    </div>
    <input type="submit" class="btn btn-secondary" value="Cadastrar">
    <!--<a role="button" class="btn btn-secondary" asp-controller="Aluno" asp-action="Cadastrar">Cadastrar</a>-->
    <a role="button" class="btn btn-primary" asp-controller="Aluno" asp-action="Index">Voltar</a>

</form>