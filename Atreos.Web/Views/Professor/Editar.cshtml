@model ProfessorViewModel
@{
    ViewData["Title"] = "Cadastrar Novo Professor";
}
<link rel="stylesheet" href="~/css/cadastroProfessores.css" />


<h3>Edite os dados do professor</h3>
<p>Preencha os campos abaixo</p>

<form method="post" action="Salvar">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="w-100 d-flex flex-column gap-2 my-2">
        <div class="w-50">
            <label>Nome Completo</label>
            <input type="text" class="form-control" name="Nome" value="@Model.Nome">
        </div>
    </div>

    <input type="submit" class="btn btn-secondary" value="Salvar">
    <a role="button" class="btn btn-primary" asp-controller="Professor" asp-action="Index">Voltar</a>
</form>