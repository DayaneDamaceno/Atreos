@model List<ProfessorViewModel>
@{
    ViewData["Title"] = "Professores";
}
<link rel="stylesheet" href="~/css/professores.css" />
<script src="js/pages/Professores/Index.js"></script>

<div class="professor-novo">
    <h3>Professores</h3>
    <a role="button" class="btn btn-success" asp-controller="Professor" asp-action="Cadastro">+ Adicionar novo Professor</a>
</div>

<div class="listagem">
    @foreach (var item in Model)
    {
        <div class="card-professor">
            <div class="detalhes-container">
                <div class="professor-detalhe">
                    <p>
                        @item.Nome
                    </p>
                </div>
            </div>
            <form>
                <div class="icones-acao">
                    <!--
                    <a role="button" class="btn-icon" asp-controller="Professor" asp-action="Editar" asp-route-id="@item.Id">
                        <i class='bx bx-edit-alt'></i>
                    </a>
                    <button class="btn-icon">
                        <i class='bx bx-trash'></i>
                    </button>
                    -->
                    <button class="btn-icon" asp-controller="Professor" asp-action="Editar" asp-route-id="@item.Id">
                        <i class='bx bx-edit'></i>
                    </button>

                    <button class="btn-icon" asp-controller="Professor" asp-action="Deletar" asp-route-id="@item.Id">
                        <i class='bx bx-trash'></i>
                    </button>

                </div>
            </form>
        </div>
    }
</div>